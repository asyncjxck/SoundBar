<h2>Index</h2>

<%= link_to 'Create New Brand', new_brand_path %>
<table class='instruments-table'>
  <tr>
    <th>Brand</th>
    <th>Instruments Available</th>
    
  </tr>
    <% @brands.each do |brand| %>
    <tr>

      <td><%= link_to brand.name, brand_path(brand) %></td>

      <td>
        <%= brand.instruments.count %><br>

        <% brand.instruments.each do |instrument| %>
          <%= instrument.name %>;
        <% end %>

      </td>
    </tr>
  <% end %>
