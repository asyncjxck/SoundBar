<h2>Show Instruments of Brand</h2>
<h3><%= @brand.name %></h3>
<% if @brand.instruments.empty? %>
  <p>Looks like there aren't any listed instruments for this brand. Would you like to <%= link_to("create one?", new_brand_instrument_url(@brand)) %>
<% else %>
  <p>Would you like to <%= link_to("create a new instrument?", new_brand_instrument_url(@brand)) %>
    <table class="instruments-table">
      <tr id="headers">
        <th>Name</th>
        <th>Instrument Type</th>
        <th>Description</th>
        <th>Price</th>
        <th>Date Listed</th>
      </tr>
      <% @brand.instruments.each do |instrument| %>
        <tr id="each-table">
          <td><%= link_to instrument.name, instruments_show_path(instrument) %></td>
          <td><%= instrument.instrument_type %></td>
          <td><%= instrument.description %></td>
          <td>$<%= instrument.price %></td>
          <td><%= instrument.created_at.strftime("%b %-d, %Y") %><td>
        </tr>
      <% end %>
    </table>
  <% end %>

