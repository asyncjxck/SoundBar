<h2>New User</h2>

<%= render partial: '/errors', locals: { record: @user } %>
<%= @error %>

<%= form_for @user do |f| %>
  <p><%= f.label "Name" %></p>
  <%= f.text_field :name %>
  <p><%= f.label "Email" %></p>
  <%= f.text_field :email%>
  <p><%= f.label "Password" %></p>
  <%= f.password_field :password_digest %><br>
  <%= f.submit "Create Profile" %>
<% end %>