<h2>New User</h2>

<%= render partial: '/errors', locals: { record: @user } %>

<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email%><br>
  <%= f.label :password %><br>
  <%= f.password_field :password_digest %><br>
  <%= f.label :confirm_password %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Create Profile" %>
<% end %>